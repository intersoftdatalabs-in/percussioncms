<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Welcome to ${perc.site.name}</display-name>

    <description>
        ${perc.site.name}
    </description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/config/beans.xml
            /WEB-INF/config/security-app-context.xml
        </param-value>
    </context-param>

    <filter>
        <filter-name>PSCacheControlFilter</filter-name>
        <filter-class>com.percussion.secure.services.PSCacheControlFilter</filter-class>
    </filter>

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PSCacheControlFilter</filter-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>PSDefaultContentTypeFilter</filter-name>
        <filter-class>com.percussion.tomcat.filters.PSDefaultContentTypeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PSDefaultContentTypeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <error-page>
        <error-code>400</error-code>
        <location>${perc.site.error.400}</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>${perc.site.error.401}</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>${perc.site.error.403}</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>${perc.site.error.404}</location>
    </error-page>
    <error-page>
        <error-code>414</error-code>
        <location>${perc.site.error.414}</location>
    </error-page>
    <error-page>
        <error-code>415</error-code>
        <location>${perc.site.error.415}</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>${perc.site.error.500}</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>${perc.site.error.501}</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>${perc.site.error.502}</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.swf</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

</web-app>

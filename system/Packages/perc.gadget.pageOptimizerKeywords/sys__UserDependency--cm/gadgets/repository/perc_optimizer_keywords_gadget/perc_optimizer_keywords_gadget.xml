<Module>
    <ModulePrefs title="Page Optimizer Keywords"
                 category="content"
                 description="This gadget allows configuring the page optimizer keywords list."
                 thumbnail="images/gadgetIconPOKw.jpg"
                 height="320"
                 adminOnly="true">
        <Require feature="perc_core"/>
        <Require feature="settitle" />
        <Require feature="perc_getDashboardColumn" />
        <Require feature="minimessage" />
        <Require feature="perc_jquery_ui"/>
        <Require feature="setprefs" />
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
    <!DOCTYPE html>
    <link rel="stylesheet" type="text/css" href="/cm/themes/smoothness/jquery-ui-1.8.9.custom.css" />
    <link href="/cm/gadgets/repository/common/perc_common_gadget.css" rel="stylesheet" type="text/css" />
    <script src="/cm/jslib/profiles/3x/libraries/bowser/es5.js"</script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-percutils/jquery.percutils.js"</script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-jeditable/jquery.jeditable.js"></script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-perc-retiredjs/tools.scrollable-1.1.2.js" ></script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-perc-retiredjs/tools.scrollable.mousewheel-1.0.1.js" ></script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-perc-retiredjs/jquery.text-overflow.js" ></script>
    <script src="/cm/jslib/profiles/3x/jquery/plugins/jquery-dynatree/jquery.dynatree.js" ></script>
    <script  src="/cm/plugins/perc_path_constants.js"></script>
    <script  src="/cm/plugins/perc_utils.js"></script>
    <script  src="/cm/services/PercServiceUtils.js"></script>

    <script >
        var loadingMsg = null;
        var miniMsg = null;
        var DEFAULT_HEIGHT = 320;
        $(document).ready(function() {
            miniMsg = new gadgets.MiniMessage(__MODULE_ID__);
            var prefs = new gadgets.Prefs();
            var appWidth = $("#perc-iframe-gadget").width();
            var appHeight = prefs.getString('height_value');
            if (isNaN(appHeight) || appHeight.trim() === '') {
                appHeight = DEFAULT_HEIGHT;
            }
            parentFrameId = "#" + window.frameElement.id;
            window.parent.jQuery(parentFrameId).height(appHeight);

            $.PercServiceUtils.makeJsonRequest($.perc_paths.PAGE_OPT_INFO, $.PercServiceUtils.TYPE_GET, false, function (status, result) {
                $("#perc-kw-frame").attr('width', appWidth).attr('height', appHeight);
                if (status == $.PercServiceUtils.STATUS_SUCCESS) {
                    var clientIdentity = result.data.PageOptimizerInfo.clientIdentity;
                    var pageOptimizerUrl = result.data.PageOptimizerInfo.pageOptimizerUrl;
                    var keywordsUrl = pageOptimizerUrl + '/cfg/keywords?auth=' + clientIdentity;
                    //console.log("** keywordsUrl=" + keywordsUrl);
                    $("#perc-kw-frame").attr('src', keywordsUrl);
                }
                else {
                    var style = '<style>.perc-optimizer-keywords-gadget-error { '
                        + ' margin: 0 auto; position: absolute; left: 0; right: 0; top: 100px; text-align: center; '
                        + '} '
                        + '.perc-optimizer-keywords-gadget-error p { '
                        + ' font-family: "Open Sans",sans-serif; font-size: 16px; font-weight: bold; } '
                        + '</style>';
                    var srcdoc = '<div class="perc-optimizer-keywords-gadget-error"><p>Page Optimizer subscription required</p></div>';
                    $("#perc-kw-frame").contents().find('head').html(style);
                    $("#perc-kw-frame").contents().find('body').html(srcdoc);
                }
            });
        });

        function _expandNotify(){
            self.location.reload();
        }
    </script>
    <div id="perc-optimizer-keywords-gadget">
        <iframe id='perc-kw-frame' src='' frameborder='no' style="width: 100%; height: 100%;">
            <p>Your browser doesn't support iframes.</p>
        </iframe>
    </div>
     ]]>
    </Content>
</Module>

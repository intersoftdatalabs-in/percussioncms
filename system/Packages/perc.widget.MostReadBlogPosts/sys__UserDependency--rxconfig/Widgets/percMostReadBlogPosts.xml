    <![CDATA[
    $sectionPath = $perc.widget.item.properties.get('sectionPath');
    $promotedPagePaths = $perc.widget.item.properties.get('promotedPagePaths');
    $summary = $perc.widget.item.properties.get('summary');
    $mostReadMoreText = $perc.widget.item.properties.get('mostReadMoreText');
    $timePeriod = $perc.widget.item.properties.get('timePeriod');
    $hideDate = $perc.widget.item.properties.get('hideDate');
    $headingStyle = $perc.widget.item.properties.get('headingStyle');
    $ariaRole = $perc.widget.item.properties.get('ariaRole');
    $ariaLabel = $perc.widget.item.properties.get('ariaLabel');
    $numberOfResults = $perc.widget.item.properties.get('numberOfResults');
    $sortOrderByHits = $perc.widget.item.properties.get('sortOrderByHits');
    $listDateTimeFormat = $perc.widget.item.properties.get('listDateTimeFormat');
    $locale = $perc.widget.item.properties.get('locale');
    $listTitle = $perc.widget.item.properties.get('listTitle');
    $rootclass = $perc.widget.item.cssProperties.get('rootclass');
    if (!empty($rootclass)) { 
       $rootclass = $rootclass + " ";
    }

    if ($ariaLabel != '' && $ariaLabel != null) {
        $ariaLabel = ' aria-label=' + '"' + $ariaLabel + '"';
    }

    if ($ariaRole != '' && $ariaRole != null) {
        $ariaRole = ' role=' + '"' + $ariaRole + '"';
    }

    $data = "{";

    $data = $data + "&quot;sectionPath&quot;:&quot;" + $sectionPath  + "&quot;";
    $data = $data + ",&quot;promotedPagePaths&quot;:&quot;" + $promotedPagePaths  + "&quot;";
    $data = $data + ", &quot;summary&quot;:" + $summary;
    if ($mostReadMoreText != null && $mostReadMoreText != "")
    {
        $data = $data + ", &quot;readMoreLink&quot;:" + "&quot;" + $mostReadMoreText + "&quot;" ;
    }
    if ($listDateTimeFormat != null && $listDateTimeFormat != "")
    {
        $data = $data + ", &quot;dateFormat&quot;:" + "&quot;" + $listDateTimeFormat + "&quot;" ;
    }
    
    if ($locale != null && $locale != "")
    {
        $data = $data + ", &quot;locale&quot;:" + "&quot;" + $locale + "&quot;" ;
    }
    $data = $data + ", &quot;timePeriod&quot;:&quot;" + $timePeriod  + "&quot;";
    $data = $data + ", &quot;headingStyle&quot;:&quot;" + $headingStyle  + "&quot;";
    $data = $data + ", &quot;hideDate&quot;:&quot;" + $hideDate  + "&quot;";
    $data = $data + ", &quot;numberOfResults&quot;:&quot;" + $numberOfResults  + "&quot;";
    $data = $data + ", &quot;sortOrderByHits&quot;:&quot;" + $sortOrderByHits  + "&quot;";
    $data = $data + ", &quot;listTitle&quot;:&quot;" + $listTitle  + "&quot;";
	
    $dsUrl = $rx.pageutils.getDeliveryServer($sys.assemblyItem.PubServerId);

    $data = $data + ", &quot;deliveryurl&quot;:&quot;" + $dsUrl + "&quot;";
    
	$data = $data + "}";
    ##result query ends
    ]]>

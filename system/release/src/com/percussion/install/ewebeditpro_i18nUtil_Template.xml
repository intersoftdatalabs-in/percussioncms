<xsl:variable name="rxektronlocalemap" select="document('../rx_resources/ewebeditpro/rxektronlocalemap.xml')/*"/>
   <!-- The following template returns ektron language file -->
   <xsl:template name="getEktronLangFile">
      <xsl:param name="lang" select="''"/>
      <xsl:variable name="lang1" select="substring-before($lang,'-')"/>
      <xsl:variable name="lang2" select="substring-after($lang,'-')"/>
      <xsl:variable name="langmapelem1" select="$rxektronlocalemap//Language[@lang1=$lang1 and @lang2=$lang2]"/>
      <xsl:variable name="langmapelem2" select="$rxektronlocalemap//Language[@lang1=$lang1 and @lang2='']"/>
      <xsl:variable name="langmapelem3" select="$rxektronlocalemap//Language[@lang1=$lang1]"/>
      <xsl:choose>
         <xsl:when test="$langmapelem1">
            <xsl:value-of select="$langmapelem1/@ektronlangfile"/>
         </xsl:when>
         <xsl:when test="$langmapelem2">
            <xsl:value-of select="$langmapelem2/@ektronlangfile"/>
         </xsl:when>
         <xsl:when test="$langmapelem3">
            <xsl:value-of select="$langmapelem3/@ektronlangfile"/>
         </xsl:when>
         <xsl:otherwise>
            <xsl:value-of select="'locale0409b.xml'"/>
         </xsl:otherwise>
      </xsl:choose>
   </xsl:template>

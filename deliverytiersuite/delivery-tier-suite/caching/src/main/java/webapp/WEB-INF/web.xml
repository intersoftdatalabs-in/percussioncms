<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Specify Application Context with perc-context.properties -->
    <context-param>
	   	<param-name>contextClass</param-name>
	  	<param-value>com.percussion.delivery.utils.spring.PSConfigurableApplicationContext</param-value>
	</context-param>
    <context-param>
            <param-name>log4jConfiguration</param-name>
            <param-value>file:///${sys:catalina.base}/conf/perc/caching-log4j2.xml</param-value>
    </context-param>


   <!-- Security constraints -->
   <security-constraint>
      <web-resource-collection>
         <web-resource-name>Secure</web-resource-name>
         <url-pattern>/manager/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
         <role-name>deliverymanager</role-name>
      </auth-constraint>
      <user-data-constraint>
         <transport-guarantee>CONFIDENTIAL</transport-guarantee>
      </user-data-constraint>
   </security-constraint>
   <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>comment</realm-name>
   </login-config>
   <security-role>
      <role-name>deliverymanager</role-name>
   </security-role>

</web-app>
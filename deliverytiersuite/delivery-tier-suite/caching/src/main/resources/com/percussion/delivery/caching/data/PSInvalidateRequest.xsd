<xsd:schema attributeFormDefault="unqualified" elementFormDefault="qualified" version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <xsd:element name="InvalidateRequest" type="InvalidateRequestType" />
  <xsd:complexType name="InvalidateRequestType">
    <xsd:sequence>
      <xsd:element name="Paths" type="PathsType" />
      <xsd:element name="CustomProperties" type="CustomPropertiesType" />
    </xsd:sequence>
    <xsd:attribute name="type" use="required">
    	<xsd:simpleType>
    		<xsd:restriction base="xsd:string">
    			<xsd:enumeration value="URLS"></xsd:enumeration>
    			<xsd:enumeration value="DIRECTORY"></xsd:enumeration>
    			<xsd:enumeration value="REGION"></xsd:enumeration>
    		</xsd:restriction>
    	</xsd:simpleType>
    </xsd:attribute>
    <xsd:attribute name="regionName" type="xsd:string"  use="required"/>
  </xsd:complexType>
  <xsd:complexType name="CustomPropertiesType">
    <xsd:sequence>
      <xsd:element minOccurs="0" maxOccurs="unbounded" name="Property" type="PropertyType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="PropertyType">
   <xsd:simpleContent>
      <xsd:extension base="xsd:string">
         <xsd:attribute name="name" type="xsd:string" use="required" />
      </xsd:extension>
   </xsd:simpleContent>
  </xsd:complexType> 
  <xsd:complexType name="PathsType">
    <xsd:sequence>
      <xsd:element minOccurs="0" maxOccurs="unbounded" name="Path" type="xsd:string" />
    </xsd:sequence>
  </xsd:complexType>
</xsd:schema>

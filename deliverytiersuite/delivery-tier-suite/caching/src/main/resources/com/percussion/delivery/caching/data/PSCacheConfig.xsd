<xsd:schema attributeFormDefault="unqualified" elementFormDefault="qualified" version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <xsd:element name="CacheConfig" type="PSCacheConfig" />
  <xsd:complexType name="PSCacheConfig">    
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" name="CacheRegion" type="PSCacheRegion" />
    </xsd:sequence>
    <xsd:attribute name="maxQueueWorkers" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="PSCacheRegion">
    <xsd:sequence>
      <xsd:element name="Provider" type="PSCacheProvider" minOccurs="1" maxOccurs="1" />
      <xsd:element name="WebProperties" type="PSCacheWebProperties" minOccurs="0" maxOccurs="1" />
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="PSCacheWebProperties">
    <xsd:sequence>
      <xsd:element name="WebProperty" maxOccurs="unbounded" type="PSCacheWebProviderProperty" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="PSCacheProvider">
    <xsd:sequence>
      <xsd:element name="Properties" type="PSCacheProviderProperties" />
    </xsd:sequence>
    <xsd:attribute name="plugin" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="PSCacheProviderProperties">
    <xsd:sequence>
      <xsd:element name="Property" minOccurs="0" maxOccurs="unbounded" type="PSCacheProviderProperty"  />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="PSCacheProviderProperty">
	<xsd:simpleContent>
		<xsd:extension base="xsd:string">
			<xsd:attribute name="name" type="xsd:string" use="required" />
		</xsd:extension>
	</xsd:simpleContent>
  </xsd:complexType>
  <xsd:complexType name="PSCacheWebProviderProperty">
   <xsd:simpleContent>
      <xsd:extension base="xsd:string">
       <xsd:attribute name="protocol">
          <xsd:simpleType>
               <xsd:restriction base="xsd:string">
                  <xsd:enumeration value="http"></xsd:enumeration>
                  <xsd:enumeration value="https"></xsd:enumeration>
               </xsd:restriction>
            </xsd:simpleType>
         </xsd:attribute>
      </xsd:extension>
   </xsd:simpleContent>
  </xsd:complexType>
</xsd:schema>
